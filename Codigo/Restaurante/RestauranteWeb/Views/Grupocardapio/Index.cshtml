@model IEnumerable<RestauranteWeb.Models.GrupocardapioViewModel>

@{
    ViewData["Title"] = "Grupos do Cardápio";
}

<link rel="stylesheet" type="text/css" href="~/lib/datatables/css/dataTables.min.css" />
<link rel="stylesheet" type="text/css" href="~/lib/datatables/css/dataTables.bootstrap5.css" />
<link rel="stylesheet" type="text/css" href="~/lib/datatables/css/responsive.bootstrap5.min.css" />

<div class="card-header detalhe-header d-flex justify-content-between align-items-center">
    <h2 class="mb-0">Grupo Cardápio</h2>

    <a asp-action="Create" class=" btn-primary">
        Cadastrar Grupo Cardápio
    </a>
</div>
<div class="container page-list table-responsive border">
    <table id="tableGrupocardapio" class="table table-striped table-bordered w-100">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.Nome)</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Detalhes", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Deletar", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
</div>

@section Scripts {
    <script src="~/lib/datatables/js/dataTables.min.js"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap5.min.js"></script>
    <script src="~/lib/datatables/js/dataTables.responsive.js"></script>
    <script src="~/lib/datatables/js/responsive.bootstrap5.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#tableGrupocardapio').DataTable({
                responsive: true,
                autoWidth: false,
                columnDefs: [
                    { targets: -1, orderable: false, searchable: false }
                ],
                language: {
                    url: '/lib/datatables/js/pt-BR.json'
                }

            });
        });
        $(window).on('resize', function () {
            $('#tableGrupocardapio').DataTable().columns.adjust().responsive.recalc();
        });


    </script>

}


