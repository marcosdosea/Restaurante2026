@model IEnumerable<Core.DTO.RestauranteDTO>

<link rel="stylesheet" type="text/css" href="~/lib/datatables/css/dataTables.min.css" />
<link rel="stylesheet" type="text/css" href="~/lib/datatables/css/dataTables.bootstrap5.css" />
<link rel="stylesheet" type="text/css" href="~/lib/datatables/css/responsive.bootstrap5.min.css" />
@{
    ViewData["Title"] = "Index";
}

<div class="container page-list table-responsive">
    <h1>Restaurantes</h1>
    <p>
        <a asp-action="Create">Cadastrar Restaurante</a>
    </p>
    <table id="tableRestaurante" class="table table-striped table-bordered w-100">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cnpj)
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {

                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cnpj)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Detalhes", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Excluir", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script src="~/lib/datatables/js/dataTables.min.js"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap5.min.js"></script>
    <script src="~/lib/datatables/js/dataTables.responsive.js"></script>
    <script src="~/lib/datatables/js/responsive.bootstrap5.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#tableRestaurante').DataTable({
                responsive: true,
                autoWidth: false,
                language: {
                    url: '/lib/datatables/js/pt-BR.json'
                }
               
            });
        });
        $(window).on('resize', function () {
            $('#tableRestaurante').DataTable().columns.adjust().responsive.recalc();
        });
        

    </script>

}



