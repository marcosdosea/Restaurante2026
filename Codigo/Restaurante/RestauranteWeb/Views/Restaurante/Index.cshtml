@model IEnumerable<Core.DTO.RestauranteDTO>

@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" type="text/css" href="~/lib/datatable/css/jquery.dataTables.min.css" />

<h1>Restaurantes</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table id="tableRestaurante" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cnpj)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr> 
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cnpj)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.Id   })
            </td>
        </tr>
}
    </tbody>
</table>
@section Scripts {
    <script>
        $(function () {
            $('#tableRestaurante').DataTable({
                processing: true,
                serverSide: true,
                ajax: {
                    url: "/Restaurante/GetByPage",
                    type: 'POST'
                },
                language: {
                    url: '/lib/datatable/js/pt-BR.json'
                },
                columns: [
                    { data: "Nome" },
                    { data: "Cnpj" }
                ],
            });
        });
    </script>
    <script src="~/lib/datatable/js/jquery.dataTables.min.js"></script>
}