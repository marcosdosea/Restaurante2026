@model RestauranteWeb.Models.FuncionarioViewModel

@{
    ViewData["Title"] = "Excluir";
}

<h1>Excluir</h1>

<h3>Tem certeza que deseja excluir este funcionário?</h3>
<div>
    <h4>Funcionário</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cpf)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cpf)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NomeRestaurante)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomeRestaurante)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NomeFuncao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomeFuncao)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Voltar</a>
    </form>
</div>