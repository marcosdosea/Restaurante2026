@model RestauranteWeb.Models.FuncionarioViewModel

@{
    ViewData["Title"] = "Editar Funcionário";
}

<div class="card-header detalhe-header">
    <h2 class="mb-0">Editar Funcionário</h2>
</div>
<div class="row page-form">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Cpf" class="control-label"></label>
                <input asp-for="Cpf" class="form-control" />
                <span asp-validation-for="Cpf" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="IdRestaurante" class="control-label"></label>
                <select asp-for="IdRestaurante" class="form-control" asp-items="Model.ListaRestaurantes"></select>
                <span asp-validation-for="IdRestaurante" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="IdFuncaoFuncionario" class="control-label"></label>
                <select asp-for="IdFuncaoFuncionario" class="form-control" asp-items="Model.ListaFuncoes"></select>
                <span asp-validation-for="IdFuncaoFuncionario" class="text-danger"></span>
            </div>

            <div class="form-group col-12 col-md-6">
                <button type="submit" class="btn btn-primary">
                    Salvar
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    Voltar
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}