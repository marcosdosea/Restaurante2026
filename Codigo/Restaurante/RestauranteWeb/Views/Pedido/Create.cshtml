@model RestauranteWeb.Models.PedidoViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="card-header detalhe-header">
    <h2 class="mb-0">Cadastrar Pedido</h2>
</div>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="DaaHoraAtendimento" class="control-label"></label>
                <span asp-validation-for="DaaHoraAtendimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdAtendimento" class="control-label"></label>
                <select asp-for="IdAtendimento" class="form-control" asp-items="@Model.ListaAtendimentos">
                    <option value="">Selecione o atendimento...</option>
                </select>
                <span asp-validation-for="IdAtendimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdGarcom" class="control-label"></label>
                <select asp-for="IdGarcom" class="form-control" asp-items="@Model.ListaGarcons">
                    <option value="">Selecione o garçom...</option>
                </select>
                <span asp-validation-for="IdGarcom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control" asp-items="ViewBag.StatusList">
                    <option value="">Selecione...</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
