@model RestauranteWeb.Models.PedidoViewModel

@{
    ViewData["Title"] = "Details";
}


<div class="container">

    <div class="card detalhe-card mt-4">

        <div class="card-header detalhe-header">
            <h2 class="mb-0">Detalhes do Pedido</h2>
        </div>

        <div class="card-body">

            <dl class="row">
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Id)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Id)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.DataHoraSolicitacao)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.DataHoraSolicitacao)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.DaaHoraAtendimento)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.DaaHoraAtendimento)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.IdAtendimento)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.IdAtendimento)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.IdGarcom)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.IdGarcom)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Status)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Status)
                </dd>
            </dl>
        </div>

        <div class="card-footer detalhe-footer">
            @Html.ActionLink("Editar", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary me-2" })
            <a asp-action="Index" class="btn btn-secondary">Voltar</a>
        </div>

    </div>

</div>

