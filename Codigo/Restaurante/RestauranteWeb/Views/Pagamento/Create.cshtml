@model RestauranteWeb.Models.PagamentoViewModel

@{
    ViewData["Title"] = "Realizar Pagamento";
}

<div class="container mt-4">
    <h2>Registrar Pagamento</h2>
    <h5 class="text-muted">Atendimento #@Model.IdAtendimento</h5>
    <hr />

    <div class="row">
        <div class="col-md-5">
            <div class="card mb-4 border-info">
                <div class="card-body text-info bg-light">
                    <h5 class="card-title">Resumo da Conta</h5>
                    <p class="card-text mb-1"><strong>Total do Atendimento:</strong> @Model.TotalAtendimento.ToString("C")</p>
                    <p class="card-text mb-0 text-danger"><strong>Valor Pendente:</strong> @Model.ValorFaltante.ToString("C")</p>
                </div>
            </div>

            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="IdAtendimento" />

                <div class="form-group mb-3">
                    <label asp-for="Valor" class="control-label fw-bold"></label>
                    <input asp-for="Valor" class="form-control" type="number" step="0.01" max="@Model.ValorFaltante" />
                    <span asp-validation-for="Valor" class="text-danger"></span>
                    <small class="form-text text-muted">O valor não pode ultrapassar o valor pendente.</small>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="IdFormaPagamento" class="control-label fw-bold"></label>
                    <select asp-for="IdFormaPagamento" class="form-select" asp-items="ViewBag.IdFormaPagamento">
                        <option value="">-- Selecione uma opção --</option>
                    </select>
                    <span asp-validation-for="IdFormaPagamento" class="text-danger"></span>
                </div>

                <div class="form-group d-flex gap-2">
                    <input type="submit" value="Confirmar Pagamento" class="btn btn-success px-4" />
                    <a asp-action="Details" asp-controller="Atendimento" asp-route-id="@Model.IdAtendimento" class="btn btn-outline-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}