@{
    ViewData["Title"] = "Sistema de Restaurante";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="display-5 fw-bold">Sistema de Gerenciamento de Restaurante</h1>
        <p class="lead text-muted">
            Plataforma para controle de restaurantes, mesas, atendimentos e pedidos.
        </p>
    </div>

    <div class="row text-center">

        <div class="col-md-3 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">Restaurantes</h5>
                    <p class="card-text">Cadastro e gerenciamento de restaurantes.</p>
                    <a asp-controller="Restaurante" asp-action="Index" class="btn btn-outline-primary btn-sm">
                        Acessar
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">Mesas</h5>
                    <p class="card-text">Controle das mesas disponíveis.</p>
                    <a asp-controller="Mesa" asp-action="Index" class="btn btn-outline-primary btn-sm">
                        Acessar
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">Atendimentos</h5>
                    <p class="card-text">Gerenciamento dos atendimentos realizados.</p>
                    <a asp-controller="Atendimento" asp-action="Index" class="btn btn-outline-primary btn-sm">
                        Acessar
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title">Pedidos</h5>
                    <p class="card-text">Registro e acompanhamento dos pedidos.</p>
                    <a asp-controller="Pedido" asp-action="Index" class="btn btn-outline-primary btn-sm">
                        Acessar
                    </a>
                </div>
            </div>
        </div>

    </div>

</div>