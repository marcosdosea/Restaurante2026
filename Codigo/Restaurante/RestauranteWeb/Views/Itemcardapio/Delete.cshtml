@model RestauranteWeb.Models.ItemcardapioViewModel

@{
    ViewData["Title"] = "Delete";
}

<div class="container">

    <div class="card detalhe-card mt-4">
        <div class="card-header detalhe-header">
            <h2 class="mb-0">Deletar Item do Cardápio</h2>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Id)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Id)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Nome)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Nome)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Preco)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Preco)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Detalhes)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Detalhes)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Status)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Status)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.NomeRestaurante)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.NomeRestaurante)
                </dd>
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.IdGrupoCardapio)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.IdGrupoCardapio)
                </dd>
            </dl>
        </div>

        <div class="card-footer detalhe-footer">
            @Html.ActionLink("Deletar", "Delete", new { id = Model.Id }, new { @class = "btn btn-danger me-2" })
            <a asp-action="Index" class="btn btn-secondary">Voltar</a>
        </div>

    </div>

</div>