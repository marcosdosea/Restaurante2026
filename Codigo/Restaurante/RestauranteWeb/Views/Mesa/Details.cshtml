@model RestauranteWeb.Models.MesaViewModel

@{
    ViewData["Title"] = "Details";
}


<div class="container">

    <div class="card detalhe-card mt-4">

        <div class="card-header detalhe-header">
            <h2 class="mb-0">Detalhes da Mesa</h2>
        </div>

        <div class="card-body">

    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Identificacao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Identificacao)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdRestaurante)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdRestaurante)
        </dd>
    </dl>
</div>

<div class="card-footer detalhe-footer">
    @Html.ActionLink("Editar", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary me-2" })
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</div>

</div>

</div>

