@model RestauranteWeb.Models.MesaViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="card-header detalhe-header">
    <h2 class="mb-0">Cadastrar Mesa</h2>
</div>
<div class="row page-form">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Identificacao" class="control-label"></label>
                <input asp-for="Identificacao" class="form-control" />
                <span asp-validation-for="Identificacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdRestaurante" class="control-label"></label>
                <input asp-for="IdRestaurante" class="form-control" />
                <span asp-validation-for="IdRestaurante" class="text-danger"></span>
            </div>
            <div class="form-group col-12 col-md-6">
                <button type="submit" class="btn btn-primary">
                    Salvar
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    Voltar
                </a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
