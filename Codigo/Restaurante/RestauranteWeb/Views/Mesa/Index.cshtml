@model IEnumerable<RestauranteWeb.Models.MesaViewModel>

@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" type="text/css" href="~/lib/datatables/css/dataTables.min.css" />
<link rel="stylesheet" type="text/css" href="~/lib/datatables/css/dataTables.bootstrap5.css" />
<link rel="stylesheet" type="text/css" href="~/lib/datatables/css/responsive.bootstrap5.min.css" />
@{
    ViewData["Title"] = "Index";
}
<div class="card-header detalhe-header d-flex justify-content-between align-items-center">
    <h2 class="mb-0">Restaurantes</h2>

    <a asp-action="Create" class=" btn-primary">
        Cadastrar Restaurante
    </a>
</div>
<div class="container page-list table-responsive border">
    <table id="tableMesa" class="table table-striped table-bordered w-100">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Identificacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdRestaurante)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Identificacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdRestaurante)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                @Html.ActionLink("Details", "Details", new {  id=item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
</div>
@section Scripts {
    <script src="~/lib/datatables/js/dataTables.min.js"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap5.min.js"></script>
    <script src="~/lib/datatables/js/dataTables.responsive.js"></script>
    <script src="~/lib/datatables/js/responsive.bootstrap5.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#tableMesa').DataTable({
                responsive: true,
                autoWidth: false,
                columnDefs: [
                    { targets: -1, orderable: false, searchable: false }
                ],
                language: {
                    url: '/lib/datatables/js/pt-BR.json'
                }

            });
        });
        $(window).on('resize', function () {
            $('#tableMesa').DataTable().columns.adjust().responsive.recalc();
        });


    </script>

}
