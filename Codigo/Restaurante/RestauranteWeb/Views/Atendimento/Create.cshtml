@model RestauranteWeb.Models.AtendimentoViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Atendimento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DataHoraInicio" class="control-label"></label>
                <input asp-for="DataHoraInicio" class="form-control" />
                <span asp-validation-for="DataHoraInicio" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control" asp-items="ViewBag.StatusList">
                    <option value="">Selecione...</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalConta" class="control-label"></label>
                <input asp-for="TotalConta" class="form-control" />
                <span asp-validation-for="TotalConta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalServico" class="control-label"></label>
                <input asp-for="TotalServico" class="form-control" />
                <span asp-validation-for="TotalServico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalDesconto" class="control-label"></label>
                <input asp-for="TotalDesconto" class="form-control" />
                <span asp-validation-for="TotalDesconto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Total" class="control-label"></label>
                <input asp-for="Total" class="form-control" />
                <span asp-validation-for="Total" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdMesa" class="control-label"></label>
                <select asp-for="IdMesa" class="form-control" asp-items="@Model.ListaMesas">
                    <option value="">Selecione a mesa...</option>
                </select>
                <span asp-validation-for="IdMesa" class="text-danger"></span>
            </div>

            <div class="form-group" style="margin-top: 10px;">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
