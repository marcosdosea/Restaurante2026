@model RestauranteWeb.Models.AtendimentoViewModel

@{
    ViewData["Title"] = "Edit";
}

<div class="card-header detalhe-header">
    <h2 class="mb-0">Editar Atendimento</h2>
</div>
<div class="row page-form">
    <div class="col-md-12">
        <form asp-action="Edit" class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group col-12 col-md-3">
                <label asp-for="DataHoraFim" class="control-label"></label>
                <input asp-for="DataHoraFim" class="form-control" />
                <span asp-validation-for="DataHoraFim" class="text-danger"></span>
            </div>
            <div class="form-group col-12 col-md-4">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control" asp-items="ViewBag.StatusList">
                    <option value="">Selecione...</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group col-12 col-md-5">
                <label asp-for="IdMesa" class="control-label"></label>
                <select asp-for="IdMesa" class="form-control" asp-items="@Model.ListaMesas">
                    <option value="">Selecione a mesa...</option>
                </select>
                <span asp-validation-for="IdMesa" class="text-danger"></span>
            </div>
            <div class="form-group col-12 col-md-6">
                <button type="submit" class="btn btn-primary">
                    Salvar
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    Voltar
                </a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
